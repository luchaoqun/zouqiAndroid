<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zouqi.W_buildactivityscroll" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

         <LinearLayout 
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"  >

             <TextView
              android:id="@+id/W_bulidactivityname"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="活动名称" 
              android:textSize="15dp"/>

             <EditText
                 android:id="@+id/W_editactivityname"
        		 android:layout_width="wrap_content"
       			 android:layout_height="wrap_content"
       			 android:layout_weight="1"
        		 android:ems="10">

                <requestFocus />
            </EditText>
             
             
         </LinearLayout>

         
         <LinearLayout 
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"  >

             <TextView
               android:id="@+id/W_buildactivitylocation"
    		   android:layout_width="wrap_content"
      		  android:layout_height="wrap_content"
        	  android:text="活动地点"
              android:textSize="15dp"/>

             <EditText
               android:id="@+id/W_buildactivityeditlocation"
        	   android:layout_width="160dp"
       		   android:layout_height="wrap_content"
      		   android:ems="10">

                <requestFocus />
            </EditText>
            
               <Button
        android:id="@+id/W_choseloaction"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="选取位置" 
        android:textSize="15dp"/>
         
         </LinearLayout>
         
         <LinearLayout 
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"  >

          <TextView
        android:id="@+id/W_buildactivitybegintime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始时间"
        android:textSize="15dp" />

        <EditText
        android:id="@+id/W_editbuildactivitytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10" >
           <requestFocus />
        </EditText>
             
         </LinearLayout>
         
           <LinearLayout 
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"  >

             <TextView
        android:id="@+id/W_buildactivityendtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/W_editbuildactivityendtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10" >

        <requestFocus />
    </EditText>
        
         </LinearLayout>
         
           
             <LinearLayout 
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"  >

				            <TextView
				        android:id="@+id/W_buildactivity_maxpeople"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="最大人数"
				        android:textSize="15dp" />
				
				    <EditText
				        android:id="@+id/W_buildactivity_editmaxpeople"
				        android:layout_width="116dp"
				        android:layout_height="wrap_content"
				        android:ems="10" >
				
				        <requestFocus />
				    </EditText>
             
             
         </LinearLayout>
           
                 <LinearLayout 
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"  >
							  <TextView
							        android:id="@+id/W_buildactivityteam"
							        android:layout_width="wrap_content"
							        android:layout_height="wrap_content"
							        android:text="活动群组"
							        android:textSize="15dp" />
							
							    <EditText
							        android:id="@+id/W_buildactivityeditteam"
							        android:layout_width="wrap_content"
							        android:layout_height="wrap_content"
							        android:layout_weight="1"
							        android:ems="10" >
							
							        <requestFocus />
							    </EditText>
           
         </LinearLayout>    
                    
                  <LinearLayout 
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"  >
								 <TextView
								        android:id="@+id/W_buildactivityintroduce"
								        android:layout_width="wrap_content"
								        android:layout_height="wrap_content"
								        android:text="活动介绍"
								        android:textSize="15dp" />
								
								    <EditText
								        android:id="@+id/W_buildactivityeditintroduce"
								        android:layout_width="wrap_content"
								        android:layout_height="200dp"
								        android:layout_weight="1"
								        android:ems="10" >
								
								        <requestFocus />
								    </EditText>
            
             
             
         </LinearLayout>
                 
               <LinearLayout 
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"  >
					   <ImageView
					        android:id="@+id/W_buildactivity_imgxiaotu"
					        android:layout_width="200dp"
					        android:layout_height="200dp"
					        android:layout_weight="0.90"
					        android:src="@drawable/app1" />

    <Button
        android:id="@+id/W_buildactivity_btnxiaotu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选取小图" />
            
             
             
         </LinearLayout>   
                  
                 <LinearLayout 
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"  >

            
             
             
         </LinearLayout>   
                 <ImageView
					        android:id="@+id/W_buildactivity_imgdatu"
					        android:paddingTop="50dp"
					        android:layout_width="500dp"
					        android:layout_height="300dp"
					        android:layout_weight="0.90"
					        android:src="@drawable/snowpng" />
                 
			                   <Button
			        android:id="@+id/W_buildactivity_btndatu"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:text="选取大图" />
                 
			                    <Button
			        android:id="@+id/W_buildactivity_truebuild"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:text="发起活动" />
			                   
         </LinearLayout>
    </ScrollView>

</RelativeLayout>
